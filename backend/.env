# App
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# DB (example)
DATABASE_URL=postgresql://postgres:password@postgres:5432/worship

# JWT
SECRET_KEY=replace-me-with-secure-random
JWT_ALGORITHM=HS256
ACCESS_EXPIRE_MINUTES=10
REFRESH_EXPIRE_DAYS=7

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Storage adapter selection: s3 | gcs | azure
STORAGE_ADAPTER=s3

# S3
S3_BUCKET=my-bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# GCS - set GOOGLE_APPLICATION_CREDENTIALS environment var to JSON key path in production,
# or configure Workload Identity when on GKE
GCS_BUCKET=

# Azure
AZURE_ACCOUNT_NAME=
AZURE_ACCOUNT_KEY=
AZURE_CONTAINER=

# FFmpeg (path inside worker container)
FFMPEG_BIN=/usr/bin/ffmpeg

# SENTRY_DSN optional
SENTRY_DSN=

# Rate limiting
RATE_LIMIT_DEFAULT=20/minute
